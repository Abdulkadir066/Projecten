<Window x:Class="Verkeerslichten.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Verkeerslichten"
        mc:Ignorable="d"
        Title="" Height="460" ResizeMode="NoResize" SizeToContent="Width">
    <Canvas Width="100px">
        <StackPanel>
            <Image x:Name="Rood" Source="Rood.png" Height="100px" Width="100px"/>
            <Image x:Name="Oranje" Source="Oranje.png" HorizontalAlignment="Left" Height="100px" VerticalAlignment="Top" Width="100px"/>
            <Image x:Name="Groen" Source="Groen.png" Height="100px" Width="100px"/>
            <Label x:Name="Info" Content="" FontSize="48" FontWeight="Bold" Width="100px"/>
            <Button x:Name="Start" Content="Start" Click="Start_Click" Width="100px" Height="50px" HorizontalAlignment="Left"/>
        </StackPanel>
    </Canvas>
</Window>
